<div id="books">
<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :isbn %><br>
    <%= f.text_field :isbn, :placeholder =>"10 digit ISBN" %>
  </div>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, :placeholder =>"Book Title" %>
  </div>
  <div class="field">
    <%= f.label :author %><br>
    <%= f.text_field :author, :placeholder =>"Prefer Full Name Here" %>
  </div>
  <div class="field">
    <%= f.label :publisher %><br>
    <%= f.text_field :publisher, :placeholder =>"Publishing Company" %>
  </div>
  <div class="field">
    <%= f.label :shelf_location %><br>
    <%= f.text_field :shelf_location, :placeholder =>"e.g. A.11", :size =>5 %>
  </div>
   <%= f.label "Subject" %><br />
   <%= f.collection_select :subject_id, Subject.all, :id, :subname, :prompt => 'Select A Subject' %>
  <div class="actions">
    <br /><%= f.submit %> or <%= link_to 'Cancel', books_path %>
  </div>
<% end %>
</div>