<div id="books">
	<h1>Books Listing</h1>
	
	<table>
	  <thead>
		<tr>
		  <th>Isbn</th>
		  <th>Title</th>
		  <th>Author</th>
		  <th>Publisher</th>
		  <th>Shelf location</th>
		  <th>Subject</th>
		  <th></th>
		  <th></th>
		</tr>
	  </thead>
	
	  <tbody>
		<% @books.each do |book| %>
		  <tr>
			<td><%= book.isbn %></td>
			<td><%= book.title %></td>
			<td><%= book.author %></td>
			<td><%= book.publisher %></td>
			<td><%= book.shelf_location %></td>
			<td><%= book.subname %></td>
			<td><%= link_to 'Edit', edit_book_path(book) %></td>
			<td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		  </tr>
		<% end %>
	  </tbody>
	</table>
	
	<br>
	
	<%= link_to 'New Book', new_book_path %> or <%= link_to 'Subjects Listing', subjects_path %>
</div>