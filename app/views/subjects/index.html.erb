<h1>Subjects Listing</h1>

<table>
  <thead>
    <tr>
      <th>Subject code</th>
      <th>Subject name</th>
      <th>Fiction</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.subject_code %></td>
        <td><%= subject.subject_name %></td>
        <% if subject.fiction == false %>
        <td>Non Fiction</td>
        <% else %>
        <td>Fiction</td>
        <% end %>
        <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
        <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New Subject', new_subject_path %> or <%= link_to 'Books Listing', books_path %>
